#!/usr/bin/env sh

PWD=$(dirname $(realpath "$0"))
DIR=$(realpath $PWD/../..)

export NODE_PATH="$DIR/node_modules:$NODE_PATH"

if [ $1 ];then
filepath=$(realpath $1)
fi

exec node \
  --es-module-specifier-resolution=node \
  --trace-uncaught \
  --expose-gc \
  --loader "@iuser/node-loader" \
  --unhandled-rejections=strict $filepath ${@:2:$#}
